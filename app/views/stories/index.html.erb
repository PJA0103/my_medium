<h1 class="is-size-3 has-text-weight-bold">故事列表</h1><br/>
<hr>
<% @stories.each do |story| %>
  <div class="content">
    <h2 class="is-size-5"> <%= story.title %></h2>
    <p class="is-size-6" ><%= story.content %></p>
    <p class="has-text-weight-light">最後編輯時間:<%= time_ago_in_words(story.updated_at) %>
    <%= link_to "編輯" , edit_story_path(story), class: "button is-text is-small" %>
    <%= link_to "刪除" , story , method: 'delete' ,class: "button is-danger is-small" , data: {confirm: "確認刪除?"} %>
    </p>
    <hr>
  </div>

<% end %>